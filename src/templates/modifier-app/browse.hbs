<div id="modifier-app-browse" class="{{cssClass}}" autocomplete="off">
	<div class="browse{{#if (eq selection.[0] 0)}} selected{{/if}}">Browse {{showing}}</div>
	{{#if showing}}
	{{#each categories}}
	<div data-index="{{@index}}" class="category{{#if (eq ../selection.[1] @index)}} selected{{/if}}">
		{{this.name}}{{this.showing}}
	</div>
	{{#if this.showing}}
	{{#each this.mods}}
	<div data-index="{{@index}}" class="entry{{#if (eq ../../selection.[2] @index)}} selected{{/if}}">{{signed
		this.modifier}}: {{this.name}}{{#if this.pinned}}<i class="fas fa-thumbtack"></i>{{/if}}</div>
	{{/each}}
	{{/if}}
	{{/each}}
	{{/if}}
</div>
