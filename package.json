{
	"private": true,
	"name": "gurps",
	"description": "A game aid to help play GURPS 4e for Foundry VTT",
	"license": "MIT",
	"homepage": "https://github.com/crnormand/gurps",
	"repository": {
		"type": "git",
		"url": "https://github.com/crnormand/gurps"
	},
	"bugs": {
		"url": "https://github.com/crnormand/gurps/issues"
	},
	"contributors": [
		{
			"name": "Chris Normand",
			"email": ""
		},
		{
			"name": "Nick Coffin",
			"email": ""
		},
		{
			"name": "Mikolaj Tomczynski",
			"email": "mikolajtomczynski@gmail.com"
		}
	],
	"type": "module",
	"scripts": {
		"build": "gulp build",
		"build:watch": "gulp watch",
		"link-project": "gulp link",
		"clean": "gulp clean",
		"clean:link": "gulp link --clean",
		"typecheck": "tsc --noEmit",
		"lint": "eslint --ext .ts,.js,.cjs,.mjs .",
		"lint:fix": "eslint --ext .ts,.js,.cjs,.mjs --fix .",
		"format": "prettier --write \"./**/*.(ts|js|cjs|mjs|json|yml|scss)\"",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:ci": "jest --ci --reporters=default --reporters=jest-junit",
		"postinstall": "husky install"
	},
	"devDependencies": {
		"@league-of-foundry-developers/foundry-vtt-types": "^9.280.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-typescript": "^8.4.0",
		"@rollup/stream": "^2.0.0",
		"@types/jest": "^29.0.0",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.36.1",
		"@typescript-eslint/parser": "^5.36.1",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jest": "^27.0.1",
		"eslint-plugin-prettier": "^4.2.1",
		"fs-extra": "^10.1.0",
		"gulp": "^4.0.2",
		"gulp-dart-sass": "^1.0.2",
		"gulp-sourcemaps": "^3.0.0",
		"husky": "^8.0.1",
		"jest": "^28.1.3",
		"jest-junit": "^14.0.1",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"rollup": "^2.78.1",
		"ts-jest": "^28.0.8",
		"tslib": "^2.4.0",
		"typescript": "^4.8.2",
		"uuid": "^8.3.2",
		"vinyl-buffer": "^1.0.1",
		"vinyl-source-stream": "^2.0.0",
		"yargs": "^17.5.1"
	},
	"lint-staged": {
		"*.(ts|js|cjs|mjs)": "eslint --fix",
		"*.(json|yml|scss)": "prettier --write"
	},
	"dependencies": {
		"fuse.js": "^6.6.2"
	}
}
