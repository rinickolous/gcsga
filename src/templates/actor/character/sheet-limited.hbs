<form class="{{cssClass}} limited" autocomplete="off">
	<div id="sheet">
		<div id="personal">
			{{>actor/character/sections/portrait }}
			{{>actor/character/sections/identity }}
			{{>actor/character/sections/miscellaneous }}
			{{>actor/character/sections/description }}
		</div>
		<div id="stats">
			<div id="hit-locations">
				<div class="header body-plan">{{ system.settings.body_type.name }}</div>
				<div class="header roll">{{ localize "gurps.character.body_type.roll" }}</div>
				<div class="header location">{{ localize "gurps.character.body_type.location" }}</div>
				<div class="header dr">{{ localize "gurps.character.body_type.dr" }}</div>
				{{#each hit_locations }}
				{{>actor/character/sections/hit-location tab=0 }}
				{{/each }}
			</div>
		</div>
		<div id="footer">
			<div class="left">
				{{{ localize "gurps.character.copyright" current_year=current_year }}}
			</div>
			<div class="right">
				<a tabindex="-1" href="https://gurpscharactersheet.com/">gurpscharactersheet.com</a>
			</div>
		</div>
	</div>
</form>
