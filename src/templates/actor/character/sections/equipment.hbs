<div class="entry-parent" readonly></div>
<div class="equipped" data-item-id="{{_id}}" >{{#if this.equipped}}{{>svg shapes=(arr "--shape-checkmark")}}{{/if}}</div>
<div class="quantity">{{this.quantity}}</div>
<div class="desc item" data-item-id="{{_id}}" {{{indent this}}}>
	<div class="dropdown">
	{{#if (eq this.type "equipment_container")}}
		{{#if this.open}}	
			{{>dropdown-open}}
		{{else}}
			{{>dropdown-closed}}
		{{/if}}
	{{/if}}
	</div>
	<div class="name">
	{{this.name}}
	</div>
	{{>item-notes}}
</div>
<div class="uses">{{#if (and this.uses this.maxUses)}}{{this.uses}}{{/if}}</div>
<div class="tech-level">{{this.techLevel}}</div>
<div class="legality-class">{{this.legalityClass}}</div>
<div class="weight">{{this.adjustedWeightFast}}</div>
<div class="value">{{this.adjustedValue}}</div>
<div class="extended-weight">{{this.extendedWeightFast}}</div>
<div class="extended-value">{{this.extendedValue}}</div>
<div class="reference">{{this.reference}}</div>
{{#if this.open}}
	{{#each this.children}}
		{{>equipment}}
	{{/each}}
{{/if}}
