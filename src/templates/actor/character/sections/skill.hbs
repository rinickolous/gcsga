<div class="desc item" data-item-id="{{this.id}}" {{{indent this}}}>
	<div class="dropdown">
	{{#if (eq this.type "skill_container")}}
		{{#if this.open}}	
			{{>dropdown-open}}
		{{else}}
			{{>dropdown-closed}}
		{{/if}}
	{{/if}}
	</div>
	{{!-- {{this.name_formatted}} --}}
	<div class="name">
	{{this.name}}
	</div>
	{{>item-notes}}
</div>
<div class="level rollable">{{this.skillLevel}}</div>
<div class="rsl rollable">{{this.relativeLevel}}</div>
<div class="points">{{this.points}}</div>
<div class="reference">{{this.reference}}</div>
{{#if this.open}}
	{{#each this.children}}
		{{>skill}}
	{{/each}}
{{/if}}
