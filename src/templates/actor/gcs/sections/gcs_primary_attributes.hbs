<div id="primary_attributes">
	<div class="header">{{localize "gcsga.sheet.primary_attributes"}}</div>
	<div class="fieldblock3">
		{{#each primary_attributes}}
			<div class="points">[{{this.points}}]</div>
			{{#if ../editing}}
			<div class="field align_right">
				<input
					data-id="{{this.id}}"
					class="input attr"
					type="number"
					value="{{this.value}}"
				/>
			</div>
			{{else}}
			<div class="field rollable align_right" data-path="this.value">
				<input
					name="data.attributes.{{this.id}}.calc.value"
					class="input"
					type="number"
					value="{{this.value}}"
					disabled
				/>
			</div>
			{{/if}}
			<div class="label">{{#if this.full_name}}{{this.full_name}} ({{this.name}}){{else}}{{this.name}}{{/if}}</div>
		{{/each}}
		<hr>
		<div class="field rollable wide thrust">{{data.calc.thrust}}</div>
		<div class="label thrust">{{localize "gcsga.sheet.basic_thrust"}}</div>
		<div class="field rollable wide swing">{{data.calc.swing}}</div>
		<div class="label swing">{{localize "gcsga.sheet.basic_swing"}}</div>
	</div>
</div>