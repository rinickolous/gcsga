<div id="pool_attributes">
	<div class="header">{{localize "gcsga.sheet.pool_attributes"}}</div>
	<div class="fieldblock6">
		{{#each pool_attributes}}
			<div class="points">[{{this.points}}]</div>
			{{#if ../editing}}
			<div class="field align_right">
				<input
					name="data.attributes.{{this.id}}.calc.current"
					class="input"
					type="number"
					value="{{this.current}}"
				/>
			</div>
			{{else}}
			<div class="field rollable align_right" data-path="this.value">{{this.value}}</div>
			{{/if}}
			<div class="label">{{localize "gcsga.sheet.pool_attribute_of"}}</div>
			{{#if ../editing}}
			<div class="field align_right">
				<input
					name="data.attributes.{{this.id}}.calc.value"
					class="input"
					type="number"
					value="{{this.value}}"
				/>
			</div>
			{{else}}
			<div class="field rollable align_right" data-path="this.value">{{this.value}}</div>
			{{/if}}
			<div class="label">{{this.name}}</div>
			<div class="label tooltip">
				{{#if this.state.state}}
				[{{this.state.state}}]
				{{#if this.state.explanation}}
					<span class="tooltiptext">{{{this.state.explanation}}}</span>
				{{/if}}
				{{/if}}
			</div>
		{{/each}}
	</div>
</div>