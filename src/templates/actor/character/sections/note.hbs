<div class="desc item" data-item-id="{{this.id}}" {{{indent this}}}>
	<div class="dropdown">{{#if (eq this.type "note_container")}}
		{{#if this.system.open}}
		{{>dropdown-open}}
		{{else}}
		{{>dropdown-closed}}
		{{/if}}
		{{/if}}
	</div>
	<div class="name">
		{{this.name}}
	</div>
</div>
<div class="reference" data-pdf="{{this.reference}}">{{ref this.reference}}</div>
