<div id="points">
	<div class="header">{{actor.totalPoints}} {{localize "gcsga.character.points.title"}}</div>
	<div class="fieldblock">
		{{>input-text after="gcsga.character.points.unspent" field="field" name="" data=actor.unspentPoints type="Number" class=(input_lock editing)}}
		{{>input-text after="gcsga.character.points.race" field="field" data=actor.traitPoints.[2] class="disabled"}}
		{{>input-text after="gcsga.character.points.attributes" field="field" data=actor.attributePoints class="disabled"}}
		{{>input-text after="gcsga.character.points.advantages" field="field" data=actor.traitPoints.[0] class="disabled"}}
		{{>input-text after="gcsga.character.points.disadvantages" field="field" data=actor.traitPoints.[1] class="disabled"}}
		{{>input-text after="gcsga.character.points.quirks" field="field" data=actor.traitPoints.[3] class="disabled"}}
		{{>input-text after="gcsga.character.points.skills" field="field" data=actor.skillPoints class="disabled"}}
		{{>input-text after="gcsga.character.points.spells" field="field" data=actor.spellPoints class="disabled"}}
	</div>
</div>
