<div id="description">
	<div class="header">{{localize "gcsga.character.description"}}</div>
	<div class="fieldblock">
		{{>input-text label="gcsga.character.gender" field="field" name="data.profile.gender" type="String" data=data.profile.gender class=(input_lock editing)}}
		{{>input-text label="gcsga.character.age" field="field" name="data.profile.age" type="String" data=data.profile.age class=(input_lock editing)}}
		{{>input-text label="gcsga.character.birthday" field="field" name="data.profile.birthday" type="String" data=data.profile.birthday class=(input_lock editing)}}
		{{>input-text label="gcsga.character.religion" field="field" name="data.profile.religion" type="String" data=data.profile.religion class=(input_lock editing)}}
	</div>
	<div class="fieldblock">
		{{>input-text label="gcsga.character.height" field="field" name="data.profile.height" type="String" data=data.profile.height class=(input_lock editing)}}
		{{>input-text label="gcsga.character.weight" field="field" name="data.profile.weight" type="String" data=data.profile.weight class=(input_lock editing)}}
		{{>input-text label="gcsga.character.sm" field="field" name="data.profile.SM" type="Number" data=(signed actor.adjustedSizeModifier) class=(input_lock editing)}}
		{{>input-text label="gcsga.character.tech_level" field="field" name="data.profile.tech_level" type="String" data=data.profile.tech_level class=(input_lock editing)}}
	</div>
	<div class="fieldblock">
		{{>input-text label="gcsga.character.hair" field="field" name="data.profile.hair" type="String" data=data.profile.hair class=(input_lock editing)}}
		{{>input-text label="gcsga.character.eyes" field="field" name="data.profile.eyes" type="String" data=data.profile.eyes class=(input_lock editing)}}
		{{>input-text label="gcsga.character.skin" field="field" name="data.profile.skin" type="String" data=data.profile.skin class=(input_lock editing)}}
		{{>input-text label="gcsga.character.handedness" field="field" name="data.profile.handedness" type="String" data=data.profile.handedness class=(input_lock editing)}}
	</div>
</div>
