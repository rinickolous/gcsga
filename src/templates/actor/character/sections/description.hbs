		{{>input-text label="gcsga.actor.gender" field="field" name="data.profile.gender" type="String" data=data.profile.gender class=(input_lock editing)}}
		{{>input-text label="gcsga.actor.age" field="field" name="data.profile.age" type="String" data=data.profile.age class=(input_lock editing)}}
		{{>input-text label="gcsga.actor.birthday" field="field" name="data.profile.birthday" type="String" data=data.profile.birthday class=(input_lock editing)}}
