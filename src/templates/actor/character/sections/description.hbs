	<div class="fieldblock">
		{{>input-text label="gcsga.actor.height" field="field" name="data.profile.height" type="String" data=data.profile.height class=(input_lock editing)}}
		{{>input-text label="gcsga.actor.weight" field="field" name="data.profile.weight" type="String" data=data.profile.weight class=(input_lock editing)}}
