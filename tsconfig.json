{
	"compilerOptions": {
		"target": "ES2021",
		"lib": ["DOM", "ES2021"],
		"types": ["@league-of-foundry-developers/foundry-vtt-types"],
		"esModuleInterop": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@actor": ["src/module/actor"],
			"@actor/*": ["src/module/actor/*"],
			"@item": ["src/module/item"],
			"@item/*": ["src/module/item/*"],
			"@module/*": ["src/module/*"],
			"@scripts/*": ["src/scripts/*"],
			"@util": ["src/util"],
			"@util/*": ["src/util/*"]
		}
	},
	"include": ["src"]
}
