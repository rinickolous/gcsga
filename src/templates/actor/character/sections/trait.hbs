<div class="entry-parent" readonly></div>
<div class="desc item {{disabled (not this.enabled)}}" data-item-id="{{_id}}" {{{indent this}}}>
	<div class="dropdown">
	{{#if (eq this.type "trait_container")}}
		{{#if this.data.open}}	
			{{>dropdown-open}}
		{{else}}
			{{>dropdown-closed}}
		{{/if}}
	{{/if}}
	</div>
	{{!-- {{this.name_formatted}} --}}
	<div class="name">
	{{this.name}}
	</div>
	{{>item-notes}}
</div>
<div class="points {{disabled (not this.enabled)}}">{{this.data.calc.points}}</div>
<div class="reference {{disabled (not this.enabled)}}">{{this.data.reference}}</div>
{{#if this.data.open}}
	{{#each this.children}}
		{{>trait}}
	{{/each}}
{{/if}}
