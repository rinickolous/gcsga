<div class="item-notes">
	{{#if (or (eq this.type "trait") (eq this.type "trait_container"))}}
		{{#unless (eq this.data.cr -1)}}{{localize (concat "gcsga.trait.cr_level." this.data.cr)}}<br>{{/unless}}
	{{/if}}
	{{#if (or (eq this.type "trait") (eq this.type "trait_container") (eq this.type "equipment") (eq this.type "equipment_container"))}}
		{{#each (enabledList this.modifiers)}}
			{{#unless (eq @index 0)}}; {{/unless}}{{this.name}}{{#if this.data.notes}} ({{this.data.notes}}){{/if}}
		{{/each}}
	{{/if}}
	{{this.data.notes}}
	{{#if (or (eq this.type "spell") (or this.type "ritual_magic_spell"))}}
		{{#if (and this.data.notes (spellValues this))}}<br>{{/if}}
		{{{spellValues this}}}
	{{/if}}
	{{#if this.error}}{{>error}}{{/if}}
</div>