<div class="enabled" data-item-id="{{this.id}}">{{#if this.enabled}}<i class="gcs-checkmark"></i>{{/if}}</div>
<div class="desc item" data-item-id="{{this.id}}" {{{indent i=this init=0 step=6}}}>
	<div class="dropdown">
		{{#if (eq this.type "eqp_modifier_container")}}
		{{#if this.open}}
		{{>dropdown-open}}
		{{else}}
		{{>dropdown-closed}}
		{{/if}}
		{{/if}}
	</div>
	<div class="name">
		{{this.name}}
	</div>
	{{>item-notes}}
</div>
<div class="tl">{{this.system.tech_level}}</div>
<div class="cost">{{this.costDescription}}</div>
<div class="weight">{{this.weightDescription}}</div>
<div class="tags">{{join this.tags ", "}}</div>
<div class="reference" data-pdf="{{this.reference}}">{{ref this.reference}}</div>
{{#if this.open}}
{{#each (sort this.children "sort")}}
{{>eqp-mod}}
{{/each}}
{{/if}}
