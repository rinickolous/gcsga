<form class="{{cssClass}} gcsga" autocomplete="off">
	<div id="sheet">
		<div id="details">
			<label class="label"></label>
			<div class="field">
				<label class="checkbox-label">
					<input class="input" name="system.disabled" type="checkbox" data-dtype="Boolean" {{checked (not
						system.disabled)}} />
					{{localize "gcsga.item.enabled"}}
				</label>
			</div>
			{{>input-text field="field" label="gcsga.item.name" name="name" data=item.name type="String"}}
			{{>textarea field="field" label="gcsga.item.notes" name="system.notes" data=system.notes type="String"}}
			{{>textarea field="field" label="gcsga.item.vtt_notes" name="system.vtt_notes" data=system.vtt_notes
			type="String"}}
			{{>textarea field="field" label="gcsga.item.user_description" name="system.user_description"
			data=system.user_description type="String"}}
			{{>input-text field="field" label="gcsga.item.tags" name="system.tags" data=(join system.tags ", ")
			type="String"}}
			<div class="label">{{localize "gcsga.item.point_cost"}}</div>
			<div class="field no-stretch">
				{{>input-text data=document.adjustedPoints class="readonly tabIndex='-1'"}}
				<label class="label checkbox-label">
					<input class="input" type="checkbox" checked />
					{{localize "gcsga.item.round_down"}}
				</label>
			</div>
			<div class="label">{{localize "gcsga.item.base_cost"}}</div>
			<div class="field no-stretch">
				{{>input-text name="NUMBER.system.base_points" data=system.base_points type="String"}}
				{{>input-text label="gcsga.item.points_per_level" name="NUMBER.system.points_per_level"
				data=system.points_per_level type="String"}}
				{{>input-text label="gcsga.item.levels" name="NUMBER.system.levels" data=system.levels type="String"
				class=(input_lock system.points_per_level)}}
			</div>
			<div class="label">{{localize "gcsga.item.cr"}}</div>
			<div class="field">
				<select name="NUMBER.system.cr" data-dtype="String">
					{{#select system.cr}}
					{{#each config.select.cr_level as |v k|}}
					<option value="{{k}}">{{localize v}}</option>
					{{/each}}
					{{/select}}
				</select>
			</div>
			<div class="label">{{localize "gcsga.item.cr_adj"}}</div>
			<div class="field">
				<select name="system.cr_adj" data-dtype="String" {{input_lock (neq system.cr 0 )}}>
					{{#select system.cr_adj}}
					{{#each config.select.cr_adj as |v k|}}
					<option value="{{k}}">{{localize v}}</option>
					{{/each}}
					{{/select}}
				</select>
			</div>
			{{>input-text field="field" label="gcsga.item.reference" name="system.reference" data=system.reference
			type="String"}}
		</div>
		{{>prerequisites}}
		{{>features}}
		<div id="trait-modifiers" class="item-list">
			<div class="header enabled"><i class="gcs-checkmark"></i></div>
			<div class="header desc">{{localize "gcsga.item.modifier_desc"}}</div>
			<div class="header cost">{{localize "gcsga.item.modifier_point_cost"}}</div>
			<div class="header tags">{{localize "gcsga.item.tags"}}</div>
			<div class="header reference"><i class="gcs-bookmark"></i></div>
			{{#each (sort modifiers "sort")}}
			{{>trait-mod}}
			{{/each}}
		</div>
		{{>melee}}
		{{>ranged}}
	</div>
</form>
